<%= simple_form_for :sessions, :url =>'/sessions', html: {class: 'form-horizontal'} do |f| -%>

  <%= f.error_notification %>
  <fieldset>
	<legend>User Form</legend>
	    <%= f.input :email %>
	    <%= f.input :password %>
		
      <div class="controls">
         <%= f.submit 'Log in', class: 'btn btn-primary' %>
         
          <%= link_to "Sign Up", signup_path, class: 'btn btn-success' %>
      </div>

  </fieldset>
<%end%>
